<!DOCTYPE html>
<html>
<head>
  <title>Task Manager</title>
</head>
<body>
  <h1>Welcome, <%= user.username %></h1>
  <h2>Your Tasks</h2>
  <ul>
    <% tasks.forEach(function(task) { %>
      <li>
        <%= task.name %>
        (Due on <%= task.dueDate.toDateString() %>)
      </li>
    <% }); %>
  </ul>

  <a href="/logout">Logout</a>
</body>
</html>
